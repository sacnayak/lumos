<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cmu.ssnayak.lumos.DropFragment">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/map"
        tools:context=".DropFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <AutoCompleteTextView
        android:id="@+id/searchLocation"
        style="@style/PlaceView"
        android:hint="From"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/receiver"
            android:hint="@string/to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="350dp"></EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carTypeLayout"
        android:orientation="vertical">
        <EditText
            android:id="@+id/message"
            android:hint="@string/message"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="400dp"></EditText>

        <Button
            android:id="@+id/send_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Send" />
    </LinearLayout>

</FrameLayout>
